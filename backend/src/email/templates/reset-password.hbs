<mjml>
  <mj-head>
    <mj-title>Reset Your Password</mj-title>
  </mj-head>
  <mj-body background-color="#F3F4F6">
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="700" color="#1F2937" align="center">
          {{companyName}}
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text font-size="28px" font-weight="700" color="#1F2937" padding-bottom="20px">
          Reset Your Password
        </mj-text>
        <mj-text font-size="16px" color="#4B5563" padding-bottom="20px">
          Hi {{username}},
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" padding-bottom="20px">
          We received a request to reset your password. Click the button below to create a new password.
        </mj-text>
        <mj-button href="{{resetLink}}" padding-top="20px">
          Reset Password
        </mj-button>
        <mj-text font-size="12px" color="#9CA3AF" padding-top="30px">
          Or copy and paste this link into your browser:
        </mj-text>
        <mj-text font-size="12px" color="#4F46E5" padding-top="5px">
          {{resetLink}}
        </mj-text>
        <mj-text font-size="12px" color="#9CA3AF" padding-top="20px">
          This link will expire in {{expiryHours}} hours.
        </mj-text>
        <mj-text font-size="14px" color="#EF4444" background-color="#FEF2F2" padding="15px" border-radius="6px">
          If you didn't request a password reset, please ignore this email or contact support if you have concerns.
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#F9FAFB" padding="30px">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          Â© {{year}} {{companyName}}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
