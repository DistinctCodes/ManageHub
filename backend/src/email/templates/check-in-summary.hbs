<mjml>
  <mj-head>
    <mj-title>Check-in Summary</mj-title>
  </mj-head>
  <mj-body background-color="#F3F4F6">
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="700" color="#1F2937" align="center">
          {{companyName}}
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text font-size="28px" font-weight="700" color="#1F2937" padding-bottom="20px">
          Your Check-in Summary
        </mj-text>
        <mj-text font-size="16px" color="#4B5563" padding-bottom="20px">
          Hi {{username}},
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" padding-bottom="20px">
          Here's your check-in summary for {{period}}:
        </mj-text>

        <!-- Stats -->
        <mj-table padding-top="20px">
          <tr style="background-color: #F9FAFB;">
            <th style="padding: 15px; text-align: left; color: #6B7280; font-size: 12px;">Metric</th>
            <th style="padding: 15px; text-align: right; color: #6B7280; font-size: 12px;">Value</th>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <td style="padding: 12px 15px; color: #1F2937; font-size: 14px;">Total Check-ins</td>
            <td style="padding: 12px 15px; text-align: right; color: #4F46E5; font-size: 16px; font-weight: 600;">{{totalCheckins}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <td style="padding: 12px 15px; color: #1F2937; font-size: 14px;">On Time</td>
            <td style="padding: 12px 15px; text-align: right; color: #10B981; font-size: 16px; font-weight: 600;">{{onTimeCount}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <td style="padding: 12px 15px; color: #1F2937; font-size: 14px;">Late</td>
            <td style="padding: 12px 15px; text-align: right; color: #F59E0B; font-size: 16px; font-weight: 600;">{{lateCount}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <td style="padding: 12px 15px; color: #1F2937; font-size: 14px;">Missed</td>
            <td style="padding: 12px 15px; text-align: right; color: #EF4444; font-size: 16px; font-weight: 600;">{{missedCount}}</td>
          </tr>
          <tr style="background-color: #F9FAFB;">
            <td style="padding: 15px; color: #1F2937; font-size: 14px; font-weight: 700;">Attendance Rate</td>
            <td style="padding: 15px; text-align: right; color: #4F46E5; font-size: 18px; font-weight: 700;">{{attendanceRate}}%</td>
          </tr>
        </mj-table>

        <mj-text font-size="14px" color="#6B7280" padding-top="30px">
          {{#if hasImprovements}}
          Keep up the great work! {{improvementMessage}}
          {{else}}
          Great job maintaining your attendance!
          {{/if}}
        </mj-text>

        <mj-button href="{{dashboardUrl}}" padding-top="20px">
          View Full Report
        </mj-button>
      </mj-column>
    </mj-section>

    <mj-section background-color="#F9FAFB" padding="30px">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          Â© {{year}} {{companyName}}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
