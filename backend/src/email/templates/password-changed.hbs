<mjml>
  <mj-head>
    <mj-title>Password Changed Successfully</mj-title>
  </mj-head>
  <mj-body background-color="#F3F4F6">
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="700" color="#1F2937" align="center">
          {{companyName}}
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text font-size="28px" font-weight="700" color="#10B981" padding-bottom="20px">
          ✓ Password Changed Successfully
        </mj-text>
        <mj-text font-size="16px" color="#4B5563" padding-bottom="20px">
          Hi {{username}},
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" padding-bottom="20px">
          Your password has been successfully changed at {{timestamp}}.
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" padding-bottom="20px">
          If you made this change, you can safely ignore this email. You can now log in with your new password.
        </mj-text>
        <mj-text font-size="14px" color="#EF4444" background-color="#FEF2F2" padding="15px" border-radius="6px">
          If you did NOT make this change, please contact our support team immediately at {{supportEmail}} or reset your password right away.
        </mj-text>
        <mj-button href="{{securityUrl}}" padding-top="30px" background-color="#EF4444">
          Review Security Settings
        </mj-button>
      </mj-column>
    </mj-section>

    <mj-section background-color="#F9FAFB" padding="30px">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          © {{year}} {{companyName}}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
