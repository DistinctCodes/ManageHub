<mjml>
  <mj-head>
    <mj-title>Payment Receipt</mj-title>
  </mj-head>
  <mj-body background-color="#F3F4F6">
    <mj-section background-color="#ffffff" padding="20px">
      <mj-column>
        <mj-text font-size="24px" font-weight="700" color="#1F2937" align="center">
          {{companyName}}
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#ffffff" padding="40px 30px">
      <mj-column>
        <mj-text font-size="28px" font-weight="700" color="#1F2937" padding-bottom="20px">
          Payment Receipt
        </mj-text>
        <mj-text font-size="16px" color="#4B5563" padding-bottom="20px">
          Hi {{username}},
        </mj-text>
        <mj-text font-size="14px" color="#6B7280" padding-bottom="20px">
          Thank you for your payment! Here are the details of your transaction:
        </mj-text>
        
        <!-- Payment Details -->
        <mj-table padding-top="20px">
          <tr style="border-bottom:1px solid #E5E7EB;padding:8px;text-align:left;">
            <th style="padding: 12px 8px; text-align: left; color: #6B7280; font-size: 12px;">Receipt Number</th>
            <td style="padding: 12px 8px; text-align: right; color: #1F2937; font-size: 14px; font-weight: 600;">{{receiptNumber}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <th style="padding: 12px 8px; text-align: left; color: #6B7280; font-size: 12px;">Date</th>
            <td style="padding: 12px 8px; text-align: right; color: #1F2937; font-size: 14px;">{{paymentDate}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <th style="padding: 12px 8px; text-align: left; color: #6B7280; font-size: 12px;">Payment Method</th>
            <td style="padding: 12px 8px; text-align: right; color: #1F2937; font-size: 14px;">{{paymentMethod}}</td>
          </tr>
          <tr style="border-bottom:1px solid #E5E7EB;">
            <th style="padding: 12px 8px; text-align: left; color: #6B7280; font-size: 12px;">Description</th>
            <td style="padding: 12px 8px; text-align: right; color: #1F2937; font-size: 14px;">{{description}}</td>
          </tr>
          <tr style="background-color: #F9FAFB;">
            <th style="padding: 12px 8px; text-align: left; color: #1F2937; font-size: 14px; font-weight: 700;">Total Amount</th>
            <td style="padding: 12px 8px; text-align: right; color: #10B981; font-size: 18px; font-weight: 700;">{{amount}}</td>
          </tr>
        </mj-table>

        <mj-text font-size="14px" color="#6B7280" padding-top="30px">
          A PDF receipt is attached to this email for your records.
        </mj-text>
        <mj-button href="{{invoiceUrl}}" padding-top="20px">
          View Invoice
        </mj-button>
        <mj-text font-size="12px" color="#9CA3AF" padding-top="20px">
          If you have any questions about this payment, please contact us at {{supportEmail}}.
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-section background-color="#F9FAFB" padding="30px">
      <mj-column>
        <mj-text font-size="12px" color="#6B7280" align="center">
          Â© {{year}} {{companyName}}. All rights reserved.
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
